{
  "include": ["src/**/*", "index.mjs"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution":"node16",
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
}